# xAPI Configuration
# Set VITE_XAPI_ENABLED=true to enable xAPI tracking
VITE_XAPI_ENABLED=false

# LRS Endpoint URL (without /statements unless your LRS requires it)
VITE_XAPI_ENDPOINT=

# Path to statements endpoint (usually /statements, leave empty if endpoint already includes it)
VITE_XAPI_STATEMENTS_PATH=/statements

# Authentication type: basic, oauth, or none
VITE_XAPI_AUTH_TYPE=basic

# For basic auth
VITE_XAPI_USERNAME=
VITE_XAPI_PASSWORD=

# For oauth
# VITE_XAPI_TOKEN=

# Homepage for actor identification (your Moodle URL)
VITE_XAPI_ACTOR_HOMEPAGE=https://pallium.ca
